{
  "manifest_version": 2,
  "name": "Sunbird",
  "version": "0.1",
  "description": "Create content on the fly",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts.js"
      ]
    }
  ],
  "permissions": [
    "http://*/*",
    "activeTab",
    "identity",
    "tabs",
    "contextMenus",
    "webNavigation",
    "notifications",
    "https://*/*",
    "<all_urls>",
    "storage",
    "cookies"
  ],
  // "page_action": {
  //   "default_popup": "index.html",
  //   "default_icon": "assets/icon-new.png"
  // },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "assets/icon-new.png"
  },
  "background": {
    "scripts": [
      "background.js",
      "runtime.js"
    ],
    "persistent": false
  }
}
